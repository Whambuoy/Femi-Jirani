<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.femijirani.Welcome">

    <Button
        android:id="@+id/find_jirani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_jirani"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/register_jirani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_jirani"
        android:layout_below="@id/find_jirani"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

</RelativeLayout>
